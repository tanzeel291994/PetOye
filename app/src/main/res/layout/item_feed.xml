<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white1"
    android:padding="5dp"  >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  >
        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/img_user"
            android:src="@drawable/com_facebook_profile_picture_blank_portrait"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:padding="1dp"
            app:siSquare="true"
            android:layout_margin="2dp"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"  />
        <LinearLayout
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"  >
            <TextView  android:id="@+id/username"
                android:text="Ameya Vichare"
                android:layout_margin="2dp"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  />
            <TextView  android:id="@+id/timestamp"
                android:text="2 Hours ago"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  />
        </LinearLayout>
        <ImageButton
            android:background="#00000000"
            android:id="@+id/report_button"
            android:layout_margin="2dp"
            android:src="@drawable/report_dots"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="fill_parent"  />
    </LinearLayout>
    <TextView
        android:padding="5dp"
        android:text="Such a cute puppy !"
        android:id="@+id/img_description"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"  />
    <ImageView
        android:id="@+id/feed_img"
        android:src="@drawable/testimage1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"  />
    <TextView
        android:id="@+id/likes_comments_count"
        android:padding="2dp"
        android:text="880 Likes 852 Comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  />
    <View
        android:layout_margin="2dp"
        android:background="@color/gainsboro"
        android:layout_width="match_parent"
        android:layout_height="1dp"   />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"  >
        <ImageButton  android:id="@+id/btnLike_feed"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:src="@drawable/like"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />
        <ImageButton  android:id="@+id/btn_comments_feed"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:src="@drawable/comment"
            android:background="#00000000"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />
        <ImageButton  android:id="@+id/btn_share_feed"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:src="@drawable/share"
            android:background="#00000000"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>
</LinearLayout>