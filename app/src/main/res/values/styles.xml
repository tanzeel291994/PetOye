<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/medium_turquoise</item>
        <item name="colorPrimaryDark">@color/lavender_gray</item>
        <item name="colorAccent">@color/medium_turquoise</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="TabNameStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/verdigris</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/verdigris</item>
    </style>
    <style name="TabTextAppearance" >
        <item name="android:textColor">@color/medium_turquoise</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
